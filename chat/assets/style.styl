@import "nib"

global-reset()
reset-html5()

light-grey = #FAFAFA
med-grey = #C9C9C9
dark-grey = #333333
dark-hover-grey = #B3B3B3
dark-active-grey = #DDD
border-grey = 1px solid med-grey
accent-blue = #4782B4
sans-font-family = "Helvetica Neue", "Lucida Grande", Helvetica, Arial, Verdana, sans-serif
mono-font-family = "Cousine", monospace

* {
  margin: 0
  padding: 0
}

// Unfortunately nib has no selection mixin
::selection { background: lighten(accent-blue, 80%) }
::-moz-selection { background: lighten(accent-blue, 80%) }

body
  font: 14px/18px sans-font-family
  color: dark-grey
  width: 100%
  height: 100%
  overflow: hidden

a
  text-decoration: none
  color: accent-blue
  &:hover { color: lighten(accent-blue, 20%) }

button, select
  font-family: sans-font-family
  font-size: 12px
  font-weight: bold
  color: #444
  background: whiteSmoke
  border: border-grey
  border-radius: 2px
  &:hover
    box-shadow: 0px 1px 1px rgba(0,0,0,.1)
    border: 1px solid dark-hover-grey
  &:active
    background: dark-active-grey

.left-sidebar
  absolute: top left
  height: 100%
  width: 200px
  border-right: border-grey
  &.closed { display: none }
  .logo-title
    font: bold 30px "Oswald", sans-serif
    div { margin: 30px 30px 30px 45px }
  .channel-controls-container
    margin-left: -3px
    width: 100%
    .channel-button-placeholder
      border: 3px dashed #ccc;
      height: 35px;
    .channel-button-container
      height: 43px
      width: 100%
      cursor: default
      .reorder
        cursor: move
        color: #bbb
        display: none
        font-size: 8px
        position: relative
        top: -2px
        left: -20px
      .leave
        display: none
        color: #888
        font-size: 16px
        position: relative
        top: 2px
      &.hover .reorder
        display: inline-block
      &.hover .leave
        display: inline-block
        &:hover
          color: red
    button
      width: 150px
      height: 35px
      margin: 4px 0px
      padding: 0px 5px 0px 10px
      text-align: left
      font-size: 14px
      overflow: ellipsis
    .current
      border-color: darken(med-grey, 40%)
      background: accent-blue
      color: white
    .unread
      box-shadow: 0px 0px 3px 1px lighten(accent-blue, 40%)
    div.add-channel-container
      font-size: 14px
      font-weight: bold
      color: #444
      background: whiteSmoke
      border: border-grey
      border-radius: 2px
      &:hover
        box-shadow: 0px 1px 1px rgba(0,0,0,.1)
        border: 1px solid dark-hover-grey
      &:active
        background: dark-active-grey
      height: 35px
      width: 15px
      margin: 4px 0px
      padding: 0px 5px 0px 10px
      text-align: left
      .plus-label
        margin-top: 8px
        display: inline-block
      .new-channel-name
        font-family: arial
        margin-top: 8px
        margin-left: 0px
        display: none

.main-content
  background: white
  absolute: top right
  height: 100%
  &:not(.collapse-left)
    left: 200px
    .message-container { margin-left: 0px }
    .chat-controls
      border-radius: bottom left 2px
      border-left: border-grey
    .input-container
      border-radius: top left 2px
      border-left: border-grey
  &.collapse-left { left: 0px }
.right-sidebar
  absolute: top right
  height: 100%
  width: 200px
  &.closed { display: none }
  .channel-users
    &:not(.current) { display: none }
    width: 100%
    overflow-y: auto
    .user-status
      background-repeat: no-repeat
      background-position: 5px 3px
      padding: 0 5px 0 (18px + 5px + 5px)
      font-size: 14px
      line-height: 26px
      position: relative
      .overlay
        pointer-events: none
        absolute: top left
        width: 100%
        height: 100%
        background-color: white
        opacity: 0
        z-index: 100
      &.offline
        font-style: italic
        .overlay { opacity: 0.7 }

.chat-column
  absolute: top left
  min-width: 300px
  height: 100%
  &.collapse-right { right: 0px }
  &:not(.collapse-right)
    right: 200px
    .message-container { margin-right: 0px }
    .chat-controls
      border-radius: bottom right 2px
      border-right: border-grey
    .input-container
      border-radius: top right 2px
      border-right: border-grey
.alert-container
  relative: top
  margin-top: 32px
  margin-left: auto
  margin-right: auto
  z-index: 5000
.alert
  padding: 8px 35px 8px 14px
  margin-bottom: 18px
  color: #C09853
  text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5)
  background-color: #FCF8E3
  border: 1px solid #FBEED5
  border-radius: 4px
  .close
    relative: top -2px right -21px
    line-height: 18px
  &.alert-error
    color: #B94A48
    background-color: #F2DEDE
    border-color: #EED3D7
.close
  float: right
  font-size: 20px
  font-weight: bold
  line-height: 18px
  color: black
  text-shadow: 0 1px 0 white
  opacity: 0.2
.chat-controls
  absolute: top left
  right: 0px
  height: 29px
  background: light-grey
  border-bottom: border-grey
  button
    height: 25px
    width: 25px
    background: none
    border: none
    color: #888
    &:hover
      color: accent-blue
      box-shadow: none
  .toggle-left-sidebar
    absolute: top left
  .toggle-right-sidebar
    absolute: top right
  .toggle-right-sidebar, .toggle-left-sidebar
    margin: 2px 0
    font-size: 13px
    // padding dependent on font-size
    padding-top: 2px
  .channel-name
    position: relative
    width: 30%
    margin-left: auto
    margin-right: auto
    margin-top: 5px
    margin-bottom: 5px
    text-align: center
  .control-button-container
    absolute: right 100px
    width: 100px;
    height: 29px;
    button
      position: absolute
      margin: 2px 0px
      svg
        height: 25px
        width: 25px
        stroke: #888
        fill: #888
      &:hover svg
        stroke: accent-blue
        fill: accent-blue
      &.active svg
        stroke: #555
        fill: yellow
    #quicksend
      right: 25px
    #logout
      right: 0
      font-size: 20px


.chat-messages
  &:not(.current) { display: none }
  absolute: top 30px left
  bottom: 81px
  width: 100%
  background: white
  overflow-y: auto
  overflow-x: hidden
  padding-top: 5px
.message-container
  font-size: 14px
  margin: 8px
  position: relative
  .author
    display: inline-block
    font-size: 12px
    line-height: 0
    font-weight: bold
    absolute: top 9px left 18px + 3px
  .email
    display: none
  .gravatar
    display: inline-block
  .time
    display: inline-block
    float: right
    font-size: 9px
    margin-right: 5px

.message
  img
    max-width: 300px
  strong
    font-weight: bold
  em
    font-style: italic
  blockquote
    border-left: 5px solid lighten(accent-blue, 60%)
    padding-left: 4px
    color: lighten(dark-grey, 15%)
  p, ol, div, ul
    margin-bottom: 5px
  code
    padding: 0px 2px
    font: 12px/16px mono-font-family
    background: lighten(accent-blue, 85%)
  .highlight
    white-space: pre
    padding: 5px
    font: 12px/16px mono-font-family
    background: lighten(accent-blue, 93%)
    border: border-grey
    border-radius: 2px
    overflow-x: auto
  .user-mention
    font-weight: bold
  .its-you
    color: accent-blue
  display: inline
  &:last-child
    p, ol, div, ul
      margin-bottom: 0

.message-separator
  &:first-child
    display: none
  border-bottom: 1px solid lighten(med-grey, 60%)

.input-container
  padding-amount = 10px
  input-controls-width = 75px
  container-height = 80px
  absolute: bottom left
  right: 0px
  height: container-height
  background: light-grey
  border-top: border-grey
  .chat-text-wrapper, .preview-wrapper
    absolute: top padding-amount left padding-amount
    right: input-controls-width + padding-amount
    height: container-height - (2 * padding-amount)
    background: white
    border-radius: 2px
    border: border-grey
    textarea
      padding: 5px
      box-sizing: border-box
      font-family: sans-font-family
      border: none
      width: 100%
      height: 100%
      font-size: 14px
      resize: none
  .preview-wrapper
    overflow-y: auto
  .input-controls
    absolute: top right
    bottom: 0px
    padding: padding-amount 0
    width: input-controls-width
    button
      button-margin = 6px
      height: ((container-height - (2 * padding-amount) - button-margin) / 2)
      width: input-controls-width - padding-amount
      margin-bottom: button-margin

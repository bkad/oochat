<div id="help" data-show="false" class="modal fade" tabindex="-1" style="display: none">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3>Keyboard Shortcuts</h3>
  </div>
  <div class="modal-body keyboard-help">
    <table>
      {{#bindings}}
        <tr>
          <td>
            {{#keys}}
              {{#key}}<span class="keys">{{key}}</span>{{/key}}
              {{#sep}}<span class="sep">{{sep}}</span>{{/sep}}
            {{/keys}}
          </td>
          <td class="helpMsg">{{helpMsg}}</td>
        </tr>
      {{/bindings}}
      <tr><td><span class="keys">escape</span></td><td>Unfocus the chat box or exit any dialog</td></tr>
    </table>
  </div>
</div>

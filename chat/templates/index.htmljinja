<!doctype html>
<html>
<head>
  <title>backflexjaxchatlot</title>
  <link rel="stylesheet" href="/assets/style.styl"></link>
  <script src="/assets/chat.coffee"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
  <script charset="utf-8">
      $(document).ready(function(){
        chat = new Chat("ws://" + document.location.host + "/eventhub")
      });
  </script>
</head>
<body>
  <div class="left-sidebar">
    <h1>LEFT</h1>
  </div>
  <div class="main-content">
    <div class="chat-column">
      <div class="chat-controls">
        <button class="expand-left-sidebar">⇤</button>
        <button class="expand-right-sidebar">⇥</button>
      </div>
      <div class="chat-messages-container">
        {#
        {% for message in messages | reverse %}
        <div class="message-container" id="message-{{ message["_id"] }}",
            data-time="{{ time.mktime(message["datetime"].timetuple()) }}">
          <div class="message-separator">
          </div>
          <div class="message-author">{{ message["author"] }}</div>
          <div class="message-contents">{{ message["message"] }}</div>
        </div>
        {% endfor %}
        #}
      </div>
      <div class="input-container">
        <div class="chat-text-wrapper"><textarea class="chat-text"></textarea></div>
        <div class="input-controls">
          <button class="chat-submit">Send</button>
          <button class="chat-preview">Preview</button>
        </div>
      </div>
    </div>
    <div class="right-sidebar">
      <h1>RIGHT</h1>
    </div>
  </div>
</body>
</html>
